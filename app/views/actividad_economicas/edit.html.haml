.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      Editar Nivel:
      = @actividad_economica.mall.nombre

    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        = link_to 'Actividades Económicas Registradas', actividad_economicas_path
      %li
        Editar Actividad Económica

.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            Editar Actividad Económica
        .ibox-content
          = form_for(@actividad_economica, url: {action: :update}, html: {class:"form-horizontal m-t-md", id: "form_edit_actividad_economica"}) do |f|
            - if @actividad_economica.errors.any?
              #error_explanation
                %h2
                  = pluralize(@actividad_economica.errors.count, "error")
                %ul
                  - @actividad_economica.errors.full_messages.each do |message|
                    %li
                      = message
            .form-group
              = f.label :nombre, "Nombre: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :nombre, autofocus: true, class: 'form-control'

            = f.hidden_field :mall_id, :value => @actividad_economica.mall.id
            .form-group
              .col-sm-3.col-sm-offset-9
                = f.submit "Actualizar", class: "btn btn-warning btn-block"