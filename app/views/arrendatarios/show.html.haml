.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      = current_user.mall.nombre
      \-
      Arrendatario
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        = link_to 'Arrendatarios', arrendatarios_path
      %li
        Arrendatario

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            = @arrendatario.nombre
        .ibox-content

  .row
    .col-lg-12
      .ibox-content
        .row
          .col-sm-3
            = link_to arrendatarios_path, class: 'btn btn-warning btn-block' do
              Regresar
          .col-sm-3.col-sm-offset-6
            = link_to edit_arrendatario_path(@arrendatario), class: 'btn btn-mall btn-block' do
              Editar
