.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      Locales Registrados
      = @mall.present? ? ' del '+@mall.nombre : nil
      %i.fa.fa-bars

    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        = link_to 'Malls Registrados', malls_path
      %li
        Locales Registrados

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-content
          .row
            .col-sm-3
              = link_to "Nuevo Local", { controller: "locals", action: "new"}, class: "btn btn-mall btn-block"
          %hr
          .row
            .col-md-3.col-sm-offset-1
              = form_for(@local1, :html => { :class => "form-horizontal" } ) do |f|
                = f.label :'Ubicacion - Nivel', class: ' control-label', for: 'local_nivel_mall_id'
                = f.collection_select(:nivel_mall_id, NivelMall.all, :id, :nombre, :onchange => 'llamar_funcion()')
            .col-md-3
              = form_for(@local2,  :html => { :class => "form-horizontal" } ) do |m|
                = m.label :'Tipo de Local', class: 'control-label', for: 'local_tipo_local_id'
                = m.collection_select(:tipo_local_id, TipoLocal.all, :id, :tipo, :onchange => 'funcion_llamar()')
            .col-md-3
              = form_for(@local2,  :html => { :class => "form-horizontal" } ) do |m|
                = m.label :'Estado del Local', class: 'control-label', for: 'local_tipo_local_id'
                = m.select(:tipo_estado_local, Local.valid_tipo_estado_local.map { |x| [x.humanize.titleize, x]})
          %br
          %br
          .row
            .col-md-12
              %table.table.table-striped.table-bordered.table-hover.dataTables-example
                %thead
                  %tr
                    %th Foto
                    %th Nro. Local
                    %th Nivel Ubicación
                    %th Pasillo
                    %th Área Planta
                    %th Área Mezanina
                    %th Área Terraza
                    %th Tipo Local
                    %th Estado Local
                    %th Acciones
                %tbody
                  - @locals.all.each do |local|
                    %tr
                      %td= image_tag local.foto.url || 'building-avatar.gif', class: 'img-circle', height: 80
                      %td= local.nro_local
                      %td= local.nivel_mall.nombre
                      %td= local.ubicacion_pasillo
                      %td= local.area_planta
                      %td= local.area_mezanina
                      %td= local.area_terraza
                      %td= local.tipo_local.tipo
                      %td= local.tipo_estado_local.humanize.capitalize
                      %td
                        = link_to edit_local_path(local) do
                          %i.fa.fa-pencil
                          Editar
                        = link_to local, data: { confirm: "Seguro que desea eliminar el Local ?" }, method: :delete do
                          %i.fa.fa-trash
                          Eliminar
