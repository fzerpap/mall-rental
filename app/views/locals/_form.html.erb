<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-md-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h3>
            Registro de Nuevo Local
          </h3>
        </div>
        <div class="ibox-content">

          <%= form_for(@local,  :html => { :class => "form-horizontal" } ) do |f| %>
              <% if @local.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@local.errors.count, "error") %> prohibited this local from being saved:</h2>

                    <ul>
                      <% @local.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group">
                <%= f.label :'Mall', class: 'col-sm-2 control-label' %><br>
                <div class="col-sm-10">
                  <%= f.text_field :mall_id, class: 'form-control', value: @mall.present? ? @mall.first.nombre : nil %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :'Nro Local', class: 'col-sm-2 control-label', for: 'local_nro_local' %><br>
                <div class="col-sm-10">
                    <%= f.text_field :nro_local, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :'Ubicacion - Nivel', class: 'col-sm-2 control-label', for: 'local_nivel_mall_id' %><br>
                <div class="col-sm-10">
                  <%= f.collection_select(:nivel_mall_id, NivelMall.all, :id, :nombre) %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :'ubicacion_pasillo', class: 'col-sm-2 control-label' %><br>
                <div class="col-sm-10">
                  <%= f.text_field :ubicacion_pasillo, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :'direccion', class: 'col-sm-2 control-label' %><br>
                <div class="col-sm-10">
                  <%= f.text_field :direccion, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :'Area (m2)', class: 'col-sm-2 control-label', for: 'local_area' %><br>
                <div class="col-sm-10">
                  <%= f.text_field :area, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :'Tipo de Local', class: 'col-sm-2 control-label', for: 'local_tipo_local_id' %><br>
                <div class="col-sm-10">
                  <%= f.collection_select(:tipo_local_id, TipoLocal.all, :id, :tipo) %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :foto, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= f.file_field :foto %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                  <%= f.check_box :propiedad_mall, label: "Es propiedad del Mall", default: false %>
                  <%= f.label :'Es propiedad del Mall', class: 'control-label' %><br>
                </div>

              </div>
              <div class="form-group">
                <div class="col-sm-3 col-sm-offset-9">
                  <%= f.submit 'Guardar', :class => 'btn btn-warning btn-block' %>
                </div>
              </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>


