.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            Editar Mall
        .ibox-content
          = form_for(@mall, url: {action: :update}, html: {class:"form-horizontal m-t-md", id: "form_edit_mall"}) do |f|
            = render 'shared/error_messages', object: f.object, model: 'Mall'
            .form-group
              = f.label :nombre, "Nombre: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :nombre, autofocus: true, class: 'form-control', required: ''
            .form-group
              = f.label :abreviado, "Abreviado: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :abreviado, autofocus: true, class: 'form-control', required: ''
            .form-group
              = f.label :rif, "RIF: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :rif, autofocus: true, class: 'form-control', required: ''
            .form-group
              = f.label :direccion_fiscal, "Direccion Fiscal: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :direccion_fiscal, autofocus: true, class: 'form-control', required: ''
            .form-group
              = f.label :telefono, "Tel√©fono: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :telefono, autofocus: true, class: 'form-control', required: ''
            .form-group
              = f.label :pai_id, "Pais: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.collection_select(:pai_id, Pai.all, :id, :nombre)
            .form-group
              .col-sm-3
                = link_to malls_path, class: 'btn btn-warning btn-block' do
                  Regresar
              .col-sm-3.col-sm-offset-6
                = f.submit "Guardar", class: "btn btn-mall btn-block"