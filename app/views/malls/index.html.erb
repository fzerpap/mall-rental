<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>
      Centros Comerciales Registrados
    </h2>
    <ol class="breadcrumb">
      <li><%= link_to 'Inicio', 'http://localhost:3000/' %></li>
      <li>
        Centros Comerciales Registrados
      </li>
    </ol>
  </div>
</div>

<%= link_to 'Nuevo Centro Comercial', new_mall_path %>
<br><br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Abreviado</th>
      <th>RIF</th>
      <th>Direccion Fiscal</th>
      <th>Telefono</th>
      <th>Pais</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @malls.each do |mall| %>
      <tr>
        <td><%= mall.nombre %></td>
        <td><%= mall.abreviado %></td>
        <td><%= mall.rif %></td>
        <td><%= mall.direccion_fiscal %></td>
        <td><%= mall.telefono %></td>
        <td><%= mall.pai.nombre %></td>
        <td><%= link_to 'Editar', edit_mall_path(mall) %></td>
        <td><%= link_to 'Eliminar', mall, method: :delete, data: { confirm: 'Â¿Esta seguro de eliminar?' } %></td>
        <td><%= link_to "Ver Locales", controller: "locals", action: "localsmall", id: mall['id'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>


